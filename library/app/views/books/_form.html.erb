<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <%= f.label :title , class: "col-xs-3"%>
    <%= f.text_field :title, class: "nopadding col-sm-8 " %>
  </div>
  <div class="row">
    <%= f.label :author , class: "col-xs-3"%>
    <!-- %= f.select :author, Author.all.collect {|a| [ a.name, a.id ] }% -->
    <%= f.collection_select :author_id, Author.all, :id, :name %>
  </div>
  <div class="row">
    <%= f.label :isbn, class: "col-xs-3" %> 
    <%= f.text_field :isbn, class: "col-sm-8 nopadding" %>
  </div>
  <div class="row">
    <%= f.label :abstract, class: "col-xs-3" %>
    <%= f.text_area :abstract, class: "col-sm-8 nopadding" %>
  </div>
  <div class="row">
    <%= f.label :pages, class: "col-xs-3" %> 
    <%= f.text_field :pages, class: "col-sm-8 nopadding" %>
  </div>
  <div class="row">
    <%= f.label :total_in_library, class: "col-xs-3" %> 
    <%= f.text_field :total_in_library, class: "col-sm-8 nopadding" %>
  </div>
  <div class="row">
    <%= f.label :genre, class: "col-xs-3" %> 
    <%= f.select :genre, Book::GENRES, { prompt: "Pick One"} %>
  </div>
  <div class="row">
    <%= f.label :published_on, class: "col-xs-3" %>
    <%= f.date_select :published_on %>
  </div>
  <div class="row">
    <%= f.label :image_cover_url, class: "col-xs-3" %> 
    <%= f.text_field :image_cover_url, class: "col-sm-8 nopadding" %>
  </div><br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
    <%= link_to 'Cancel', books_path %>
  </div>
<% end %>